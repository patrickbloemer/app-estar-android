<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/fusca"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:textColor="@android:color/holo_orange_dark"
                android:text="Estacionar VeÃ­culo"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtMarca"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Marca"
            android:gravity="center"/>

        <TextView
            android:id="@+id/txtModelo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Modelo"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtCor"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="Cor"
            android:gravity="center" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="-"
            android:textSize="30dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/txtPlaca"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="Placa"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R$"
                android:textColor="@android:color/holo_blue_dark"
                android:gravity="center"/>
            <TextView
                android:id="@+id/txtSaldoAtual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SaldoAtual"
                android:textColor="@android:color/holo_blue_dark"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R$"
                android:textColor="@android:color/holo_red_dark"
                android:gravity="center"/>
            <TextView
                android:id="@+id/txtValorASerDebitado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saldo Debitado"
                android:textColor="@android:color/holo_red_dark"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R$"
                android:textColor="@android:color/holo_green_dark"
                android:gravity="center"/>
            <TextView
                android:id="@+id/txtNovoSaldo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NovoSaldo"
                android:textColor="@android:color/holo_green_dark"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/txtData"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Data"
        android:gravity="center"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:orientation="horizontal"
    android:gravity="center">
    <TextView
        android:id="@+id/txtHoraDaChegada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="horaChegada"
        android:gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:gravity="center"/>
    <TextView
        android:id="@+id/txtMinutosDaChegada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="minutosChegada"
        android:gravity="center"/>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/txtHoraFinal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HoraFinal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"/>
        <TextView
            android:id="@+id/txtMinutosFinal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MinutosFinal"/>
    </LinearLayout>
    <Button
        android:onClick="btnConfirmarEstacionamento"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:text="Confirmar"
        android:layout_height="0dp"
        android:gravity="center"/>

</LinearLayout>